{
  "builders": [{
    "type": "virtualbox-iso",
    "boot_command": [
      "<esc><esc><enter><wait>",
      "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
      "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
      "hostname={{ .Name }} <wait>",
      "fb=false debconf/frontend=noninteractive <wait>",
      "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
      "initrd=/install/initrd.gz -- <enter><wait>"
    ],
    "boot_wait": "4s",
    "guest_os_type": "Ubuntu_64",
    "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.2-server-amd64.iso",
    "iso_checksum": "8acd2f56bfcba2f7ac74a7e4a5e565ce68c024c38525c0285573e41c86ae90c0",
    "iso_checksum_type": "sha256",
    "headless": false,
    "http_directory": "./vagrant/http",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
    "vboxmanage": [
      [
        "modifyvm",
        "{{.Name}}",
        "--memory",
        "2048"
      ],
      [
        "modifyvm",
        "{{.Name}}",
        "--cpus",
        "2"
      ]
    ]
  }],
  "provisioners": [{
    "override": {
      "virtualbox-iso": {
        "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
      }
    },
    "type": "shell",
    "scripts": [
      "./vagrant/scripts/root_setup.sh",
      "./vagrant/scripts/install_guest_additions.sh"
    ]
  },
  {
    "type": "shell",
    "scripts": [
      "./vagrant/scripts/setup.sh"
    ]
  },
  {
    "type": "ansible-local",
    "playbook_file": "./vagrant/playbook.yml",
    "group_vars": "../group_vars",
    "role_paths": [
      "../roles/common",
      "../roles/bcen01.nodejs",
      "../roles/ruby",
      "../roles/bennojoy.mysql",
      "../roles/bennojoy.redis",
      "../roles/ansible-elasticsearch"
    ]
  },
  {
    "override": {
      "virtualbox-iso": {
        "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
      }
    },
    "type": "shell",
    "scripts": [
      "./vagrant/scripts/cleanup.sh",
      "./vagrant/scripts/minimize.sh"
    ]
  }],
  "post-processors": [
    "vagrant"
  ]
}
